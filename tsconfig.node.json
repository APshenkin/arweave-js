{
    "compilerOptions": {
        "outDir": "./dist/node/",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "moduleResolution": "node",
        "module": "commonjs",
        "rootDirs": [
            "src/common",
            "src/node"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "useUnknownInCatchVariables": false,
    },
    "include": [
        "src/common",
        "src/node"
    ]
}